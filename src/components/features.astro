import { Icon } from "astro-icon";

const features = [
  {
    title: "The products you know and love",
    description:
      "Semaglutide Products:  $249/mo for your first month and $349/mo thereafter",
    icon: "bx:bxs-briefcase",
  },
  {
    title: "The products you trust and rely on",
    description:
      "Tirzepatide Products: $349/mo for your first month and $449/mo thereafter",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "On-Demand Compounding",
    description:
      "No insurance required.",
    icon: "bx:bxs-data",
  },
  {
    title: "Slim Savers Membership",
    description:
      "As a member, you can participate in the Slim Savers referral program to get discounts on the base prices for simply referring new members, including friends, co-workers, and neighbors",
    icon: "bx:bxs-bot",
  },
  {
