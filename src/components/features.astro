</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16 mb-24">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-blue-100 rounded-2xl  p-3 w-12 h-12 shrink-0">
          <Icon class="text-blue-700" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
